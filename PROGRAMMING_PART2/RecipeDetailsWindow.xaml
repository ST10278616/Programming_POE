<Window x:Class="PROGRAMMING_PART2.RecipeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROGRAMMING_PART2"
        mc:Ignorable="d"
        Title="RecipeDetailsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="RecipeNameTextBlock" Margin="10" Text="Recipe Name"/>
            <TextBlock x:Name="IngredientsTextBlock" Margin="10" Text="Ingredients"/>
            <TextBlock x:Name="StepsTextBlock" Margin="10" Text="Steps"/>
            <TextBlock x:Name="CaloriesTextBlock" Margin="10" Text="Calories"/>
        </StackPanel>
    </Grid>
</Window>